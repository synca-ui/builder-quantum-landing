# .env.example
# Copy this file to .env and fill in your actual values
# This is a template for required environment variables

# ============================================
# CRITICAL: Authentication & Security
# ============================================

# JWT secret for signing authentication tokens
# Generate a strong random string for production
# Example: openssl rand -base64 32
JWT_SECRET=dev-secret-change-me

# ============================================
# CRITICAL: Database
# ============================================

# PostgreSQL connection string (Neon)
# For Netlify: Use NETLIFY_DATABASE_URL instead
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/maitr

# Netlify Neon database connection (used by Netlify deployments)
# This takes precedence over DATABASE_URL if set
NETLIFY_DATABASE_URL=

# Optional: Supabase database URL
SUPABASE_DB_URL=

# ============================================
# CRITICAL: n8n Integration
# ============================================

# Webhook URL for n8n workflow (restaurant analysis)
# This is used to forward restaurant/website links for AI analysis
# Contact DevOps for the production webhook URL
N8N_WEBHOOK_URL=https://n8n-production-xxxx.up.railway.app/webhook/your-webhook-id

# ============================================
# Optional: External Services
# ============================================

# Stripe API keys (for payment processing)
# Get these from Stripe Dashboard
STRIPE_SECRET_KEY=sk_test_xxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxx

# Google Analytics ID (for website analytics)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXX

# Node environment (development, production, test)
NODE_ENV=development

# Server port (default: 3000)
PORT=3000

# ============================================
# Optional: Content Management
# ============================================

# Supabase configuration (if using Supabase Auth)
VITE_SUPABASE_URL=https://xxxxx.supabase.co
VITE_SUPABASE_ANON_KEY=eyJxxxxx

# ============================================
# Stack Configuration (if using Stack Auth)
# ============================================

VITE_STACK_PROJECT_ID=xxxxxx
VITE_STACK_PUBLISHABLE_CLIENT_KEY=pck_xxxxx
STACK_SECRET_SERVER_KEY=ssk_xxxxx
